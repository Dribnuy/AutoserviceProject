rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to manufacturers
    match /manufacturers/{manufacturerId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Allow public read access to injectors
    match /injectors/{injectorId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to fuel pumps
    match /fuelPumps/{pumpId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to blog posts
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Test collection - for testing purposes
    match /test_collection/{document} {
      allow read, write: if true;
    }

    // Users collection - only accessible by the user themselves
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow public read access to works (published only)
    match /works/{workId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
